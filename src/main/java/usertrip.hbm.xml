<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.grandcircus.planit.UserTrips" table="userTrips">
	<id name="tripID" column="tripID" type="int">  
		 	<generator class="increment"></generator>  
		 </id>
		<property name="userID" column="userID" type="int"></property>
		<property name="tripName" column="tripName" type="string"></property>
		<property name="privacy" column="privacy" type="int"></property>
	</class>
</hibernate-mapping> 